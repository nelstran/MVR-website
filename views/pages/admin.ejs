<!DOCTYPE html>
<html lang="en">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <head>
        <%- include('../partials/metadata'); %>
        <link rel="stylesheet" href="/css/admin.css">
    </head>
    
    <body onload="setup()">
        <%- include('../partials/header'); %>
        <div id="bottomSide">
            <section id="main">
                <%- include('../partials/colors'); %>
                <h1 style="text-align:center">Don't fuck up the website guys</h1>
                <section id="adminSection">
                    <section style="flex:2">
                        <form action="/admin/createEntry" class="adminForm">
                            <button class="add adminButton" title="Create new entry">
                                <p>ADD ENTRY ✎</p>
                            </button>
                        </form>
                        <form action="/admin/createEvent" class="adminForm">
                            <button class="add adminButton" title="Add an event">
                                <p>ADD EVENT★</p>
                            </button>
                        </form>
                        <form action="/admin/createProject" class="adminForm">
                            <button class="add adminButton" title="Add a project">
                                <p>ADD PROJECT ♬</p>
                            </button>
                        </form>
                    </section>
                    
                    <section style="flex:1">
                        <form action="/admin/manageEntries" class="adminForm">
                            <button class="manage adminButton" title="Manage entries">
                                <p>MANAGE</p>
                            </button>
                        </form>
                        <form action="/admin/manageEvents" class="adminForm">
                            <button class="manage adminButton" title="Manage events">
                                <p>MANAGE</p>
                            </button>
                        </form>
                        <form action="/admin/manageProjects" class="adminForm">
                            <button class="manage adminButton" title="Manage projects">
                                <p>MANAGE</p>
                            </button>
                        </form>
                    </section>
                </section>
                <section id="misc-div">
                    <form action="/" class="backForm">
                        <button class="back" title="Go home">
                            <p>HOME</p>
                        </button>
                    </form>
                    <form action="/admin/logout" class="adminForm">
                        <button class="logout adminButton" title="Logout">
                            <p>LOGOUT</p>
                        </button>
                    </form>
                </section>
                <h3>Contact Nelson for more help</h3>
            </section>
        </div>
        <script src="/js/index.js"></script>
    </body>
</html>