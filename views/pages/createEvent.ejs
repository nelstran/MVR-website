<!DOCTYPE html>
<html lang="en">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <head>
        <%- include('../partials/metadata'); %>
        <link rel="stylesheet" href="/css/admin.css">
        <link rel="stylesheet" href="/css/event.css">
    </head>
    
    <body onload="setup()">
        <%- include('../partials/header'); %>
        <div id="bottomSide">
            <section id="main">
                <%- include('../partials/colors'); %>
                <section>
                    <form id="eventForm" action="/admin/uploadEvent" method="POST" enctype="multipart/form-data">
                        <p style="margin:0"><strong>Create an event</strong></p>
                        
                        <input type="text" name="title" placeholder="Insert title here" id="titleInput" maxlength="255" required>
                        <label for="imgUpload" style="font-size:80%;">Upload an image:</label>
                        <input type="file" name="imgUpload" id="imgUpload" form="eventForm"
                        accept="image/png, image/jpg, image/jpeg, image/gif, image/webp" style="cursor:pointer">

                        <div id="info-container">
                            <div class="info-entry">
                                <label for="date" style="font-size:80%;">Select date:</label>
                                <input type="date" name="date" id="eventDate" required>
                            </div>
                            <div class="info-entry">
                                <label for="location" style="font-size:80%;">Set location:</label>
                                <input type="text" name="location" id="eventLocation"  maxlength="255" required>
                            </div>
                        </div>
                        <button id="submit">Post</button>
                    </form>
                </section>
                <section>

                </section>
            </section>
        </div>
        <script src="/js/index.js"></script>
        <script src="/js/event.js"></script>
    </body>
</html>