<!DOCTYPE html>
<html lang="en">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <head>
        <%- include('../partials/metadata'); %>
        <link rel="stylesheet" href="/css/admin.css">
        <link rel="stylesheet" href="/css/project.css">
    </head>
    
    <body onload="setup()">
        <%- include('../partials/header'); %>
        <div id="bottomSide">
            <section id="main">
                <%- include('../partials/colors'); %>
                <form class="backForm">
                    <button class="back" title="Go back" onclick="history.back()">
                        <p>GO BACK</p>
                    </button>
                </form>
                <section>
                    <form id="projectForm" action="/admin/uploadProject" method="POST" enctype="multipart/form-data">
                        <p style="margin:0"><strong>Post a project</strong></p>
                        
                        <input type="text" name="title" placeholder="Insert title here" id="titleInput" maxlength="255" required>
                        <label for="imgUpload" style="font-size:80%;">Upload an image:</label>
                        <input type="file" name="imgUpload" id="imgUpload" form="projectForm"
                        accept="image/png, image/jpg, image/jpeg, image/gif, image/webp" style="cursor:pointer">

                        <textarea id="project-desc" name="desc" placeholder="Insert project description here"></textarea>
                        <button id="submit">Post</button>
                    </form>
                </section>
            </section>
        </div>
        <script src="/js/index.js"></script>
        <script src="/js/project.js"></script>
    </body>
</html>